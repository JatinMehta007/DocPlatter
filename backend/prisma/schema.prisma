generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patients{
    id                   Int @id @default(autoincrement())
    username             String  @unique
    diseases             String
    allergies            String  
    room_number          String
    bed_number           String
    age                  String
    gender               String
    contact_information  String 
    patient_diets    Patient_Diet[] 
}

model Patient_Diet{

    id              Int @id @default(autoincrement())
    morning_meal    String
    evening_meal    String
    night_meal      String
    ingredients     String?
    instruction     String
    date            String?
    patient         Patients @relation(fields: [patientId], references: [id], onDelete: Cascade)
    patientId       Int  
}
